{
  "manifest_version": 2,
  "name": "Markdown for MeFi",
  "description": "Use Markdown when writing on MetaFilter.",
  "version": "0.2.0",
  "icons": {
    "48": "icon.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.metafilter.com/*"
      ],
      "css": [
        "md4mefi.css"
      ],
      "js": [
        "jquery.js",
        "jquery.selection.js",
        "jquery.color.js",
        "save-restore.js",
        "send-message.js",
        "inject-utils.js",
        "inject.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "marked.js",
      "md4mefi.js",
      "receive-message.js"
    ],
    "persistent": false
  }
}