{
  "manifest_version": 2,
  "name": "Markdown for MeFi",
  "description": "Use Markdown when writing on MetaFilter.",
  "version": "0.1.7",
  "icons": {
    "48": "icon.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.metafilter.com/*"
      ],
      "css": [
        "md4mefi.css"
      ],
      "js": [
        "script.js"
      ],
      "run_at": "document_idle"      
    }
  ]
}
